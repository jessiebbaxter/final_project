<div class="wrapper">
	<div class="container">
		<div class="product-container">
			<%= link_to "<< Products", products_path %>
			<div class="row">
				<div class="col-xs-12 col-sm-6">
					<div class="product-image">
						<%= image_tag "coming-soon.png", height: 400, crop: :fill %>
					</div>
				</div>
				<div class="col-xs-12 col-sm-6">
					<div class="product-details">
						<h3><%= @product.name %> </h3>
						<hÏ€4>$TODO</h4>
					</div>
					<div class="product-actions">
					  <% if current_user %>
					    <div class="action-add">
					      <%= link_to "Add to Cart", product_order_items_path(@product), method: :post, class: "btn btn-primary" %>
					    </div>
					   <% else %>
					   <!-- Modal link -->
					    <%= link_to "Add to Cart", "#", class: "btn btn-primary", :id => 'add-product', data: {toggle: "modal", target: "#signInModal"} %>
					    <% end %>
					</div>
				</div>
			</div>
			<%= form_tag "", { method: :get, class: "variant-form js-variant-form" } do %>
				<%= select_tag(:varient_id, options_for_select(@varient_options, @varient_id)) %>
		    <% end %>
			
			<div class="row" id="product-price-holder">
				<div class="product-prices" id="product-prices">
					<% @varient_id %>
					<% @current_varient.inventories.each do |inventory| %>
						<%= inventory.id %>
						<%= inventory.price %>
					<% end %>
					adsfasdf
					asdfas
					dfasdf
					asdfas

				</div>
			</div>
		</div>
	    <!-- Modal -->
      <%= render 'shared/modal' %>
	</div>
</div>
