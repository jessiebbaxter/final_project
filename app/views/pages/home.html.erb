<div class="wrapper">
	<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.3) 0%, rgba(0,36,61,0.6) 90%), url('https://images.unsplash.com/photo-1534154152722-fae307fc65d1');">
		<div class="container">
			<div class="banner-content">
		    	<h1>BELLA BIRD</h1>
		    	<p>Repurchase beauty items in one-click.</p>
		    <div class="row">
		    	<div class="col-xs-12 col-md-6 col-md-offset-3">
	    			<%= form_tag products_path, { method: :get, id: "search-form" } do %>
						<%= text_field_tag :query,
						  params[:query],
						  class: "search-bar",
						  placeholder: "e.g. Nars sheer glow foundation"
						%>
						<%= button_tag "<i class='fas fa-search'></i>".html_safe, class: "btn btn-primary" %>
					<% end %>
		    	</div>
		    </div>
		  </div>
		</div>
	</div>
</div>

