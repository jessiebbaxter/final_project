<div class="wrapper">
  <div class="container">
    <h1>Your Cart</h1>
    <!-- <h3>Order number #<%= @order.id %></h3> -->
    <table class="table">
      <thead>
        <tr>
          <th style="width: 50%", scope="column" colspan="2">Product</th>
          <th style="width: 10%", scope="column", class="td-center">Seller</th>
          <th style="width: 10%", scope="column", class="td-center">Price</th>
          <th style="width: 20%", scope="column", class="td-center">Total</th>
          <th style="width: 10%", scope="column", class="td-center">Quantity</th>
          <th style="width: 5%", scope="column", class="td-center">Delete</th>
        </tr>
      </thead>
      <tbody class="table-align-middle">
        <% @order.order_items.order('id').each do |order_item| %>
        <% item = Inventory.find(order_item.inventory_id) %>
          <tr>
            <td>
              <%= cl_image_tag(item.varient.photo, :width=>100, :height=>100, :crop=>"thumb") %>
              <td><%= link_to "#{item.varient.product.brand} #{item.varient.product.name} - #{item.varient.name}", product_path(id: item.varient.product, varient_id: item.varient) %>
            </td>
            <td class="td-center align-middle"><%=Seller.find(item.seller_id).domain %>
            </td>
            <td class="td-center"><%= item.price %></td>
            <td class="order-item-total td-center""> <%= order_item.qty*item.price %></td>
            <td class="td-center">
              <%= form_for(order_item, url: order_item_path(order_item), method: :patch )  do |f| %>
                <div class='form-group dropdown'>
                  <%= f.select :qty, (1..5), {}, onChange: "this.form.submit();"%>
                </div>
              <% end %>
            </td>
            <td class="td-center"> <%= link_to "<i class='far fa-trash-alt'></i>".html_safe, order_item_path(order_item), method: :delete %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="checkout-area">
    <h3>Total = $<span class="total-sum"></span></h3>
    <% if current_user.customer_id %>
      <%= form_tag order_payments_path(@order), method: :post do %>
        <%= hidden_field_tag 'amount', finalise_total %>
        <%= submit_tag 'Checkout', class: 'btn btn-primary' %>
      <% end %>
    <% else %>
      <%= form_tag new_order_payment_path(@order), method: :get do %>
        <%= submit_tag 'Checkout', class: 'btn btn-primary' %>
      <% end %>
    <% end %>
    </div>
  </div>
</div>
