<div class="col-xs-12 col-sm-4 col-md-3">
	<div class="card-repurchase">
		<%= link_to product_path(item[:product]) do %>
		 	<div class="card-repurchase-img" style="background-image: url('<%= cl_image_path item[:product].photo, crop: :fill %>');">
	  		</div>
		<% end %>
			<div class="card-repurchase-action">
				<%= form_tag order_items_path do %>
          <%= button_tag  "Add to Cart" , name: "inventory_id", value: "#{item[:inventory].id}", class: "btn btn-primary" %>
         <% end %>
			</div>
	</div>
</div>
