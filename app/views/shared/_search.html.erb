<div class="row">
  <div class="col-xs-12 col-md-6">
    <h3>BELLA BIRD</h3>
    <%= form_tag products_path, { method: :get, id: "search-form" } do %>
      <%= text_field_tag :query,
      params[:query],
      class: "search-bar",
      placeholder: "e.g. Organic face serum"
      %>
      <%= button_tag "<i class='fas fa-search'></i>".html_safe, class: "btn btn-primary" %>

    <% end %>
  </div>
</div>
